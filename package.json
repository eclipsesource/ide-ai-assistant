{
  "private": true,
  "engines": {
    "yarn": ">=1.7.0 <2",
    "node": ">=14.18.0"
  },
  "scripts": {
    "build:browser": "yarn --cwd apps/browser-app bundle",
    "build:electron": "yarn --cwd apps/electron-app bundle",
    "prepare": "lerna run prepare",
    "postinstall": "theia check:theia-version",
    "start:browser": "yarn --cwd apps/browser-app start --plugins=local-dir:../../plugins",
    "start:electron": "yarn --cwd apps/electron-app start --plugins=local-dir:../../plugins",
    "start": "lerna run start --parallel --scope backend --scope browser-app",
    "watch": "lerna run --parallel watch",
    "test:backend": "yarn --cwd backend test",
    "test:theia": "yarn --cwd extensions/ai-assistant-theia test",
    "test:vsc": "yarn --cwd extensions/ai-assistant-vsc test",
    "lint": "eslint . --ext .ts",
    "clean": "lerna run clean && lerna clean --yes && git clean -f -x ./node_modules"
  },
  "devDependencies": {
    "lerna": "2.4.0"
  },
  "workspaces": [
    "extensions/*",
    "apps/browser-app",
    "apps/electron-app",
    "backend"
  ]
}
