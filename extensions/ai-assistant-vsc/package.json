{
  "name": "ai-assistant-vsc",
  "displayName": "ai-assistant-vsc",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "AI Assistant",
          "icon": "src/resources/chat-bot.svg"
        }
      ]
    },
    "views": {
      "ai-assistant": [
        {
          "type": "webview",
          "id": "ai-assistant-vsc.chatboxView",
          "name": "AI Assistant"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-assistant-vsc.openAssistant",
        "category": "AI Assistant",
        "title": "Open Assistant"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf out",
    "prepare": "yarn run clean && yarn run compile && yarn symlink",
    "symlink": "symlink-dir . ../../plugins/ai-assistant-vsc"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6",
    "symlink-dir": "latest"
  }
}
